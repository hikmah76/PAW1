<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Data Karyawan Rumah Sakit</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="/public/css/todo.css">

</head>
<body>

<div class="navbar">
    <img src="/public/logo.jpg" alt="Gambar 2" class="mb-4 mx-auto" style="max-width: 40px;">
    <div class="nav-links">
        <a href="home.ejs">Home</a>
        <a href="contact.ejs">Contact</a>
        <a href="todo.ejs">Todo</a>
    </div>
    <div class="icon-group">
        <a href="jawaban.html" class="sign-out-link">
            <i class="fas fa-sign-out-alt"></i> Sign Out
        </a>
    </div>
</div>
<div class="center-text" style="display: flex; justify-content: center; align-items: center; height: 10vh; margin: 0;">
    <h2 style="text-align: center;">Data Karyawan Rumah Sakit</h2>
</div>
<button class="add-todo-btn" onclick="showForm()">Add Todo</button>
<div class="form-container" id="formContainer">
    <form id="todoForm" onsubmit="addTodoCard(event)">
        <input type="text" id="title" placeholder="Enter Title" required>
        <textarea id="description" placeholder="Enter Description" required></textarea>
        <button type="submit">Submit</button>
    </form>
</div>

<div class="cards-container" id="cardsContainer"></div>

<body>
    <!-- Content of the page -->
    <div class="content">
        <!-- Your page content goes here -->
    </div>
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-center">
                    <div class="footer-links">
                        <p class="copyright-text">@Copyright 2024 Hikmah</p>
                    </div>
                </div>
                <div class="footer-right">
                    <!-- Additional footer content can be added here -->
                </div>
            </div>
        </div>
    </footer>



<script>
    function showForm() {
        const formContainer = document.getElementById('formContainer');
        formContainer.style.display = 'block';
    }

    function addTodoCard(event) {
        event.preventDefault();
        
        const title = document.getElementById('title').value;
        const description = document.getElementById('description').value;

        const cardsContainer = document.getElementById('cardsContainer');

        const card = document.createElement('div');
        card.className = 'card';

        card.innerHTML = `
            <h3>${title}</h3>
            <p>${description}</p>
        `;

        cardsContainer.appendChild(card);

        document.getElementById('todoForm').reset();
        document.getElementById('formContainer').style.display = 'none';
    }
</script>

</body>
</html>
